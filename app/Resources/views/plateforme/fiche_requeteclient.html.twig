          <tr>
             <td style="width: 35mm; text-align: left; font-size: 10pt;" colspan="1">Ville de résidence :  </td>
             <td style="width: 50mm; text-align: left; font-size: 10pt;font-weight: bold;" colspan="1">   {{  element.societeentreprise.usagerclient.adressecontact.ville.nomville }} </td>
          
                <td style="width: 30mm; text-align: left; font-size: 10pt;" colspan="1">Département : </td>
             <td style="width: 45mm; text-align: left; font-size: 10pt;font-weight: bold;" colspan="1">     {{  element.societeentreprise.usagerclient.adressecontact.departement.nomdepartement }}  </td>
