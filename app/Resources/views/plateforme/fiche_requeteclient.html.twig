             <td style="width: 35mm; text-align: left; font-size: 10pt;" colspan="1">Date d'émission : </td>
             <td style="width: 50mm; text-align: left; font-size: 10pt;font-weight: bold;" colspan="1">     {{  element.dateEmise|date('d-m-Y') }} à {{  element.dateEmise|date('H:i') }} </td>
          
             <td style="width: 30mm; text-align: left; font-size: 10pt;" colspan="1">Catégorie de requête :  </td>
             <td style="width: 45mm; text-align: left; font-size: 10pt;font-weight: bold;" colspan="1">  {{  element.typeRequete.libelle }}</td>
          </tr> 
