       <table align="left" style="" >
         <tr>
            <td style="width: 100mm; height: 8mm; text-align: center; font-size: 8pt; color: #770000;font-weight: bold;">
                 RELEVE DES TRAITEMENTS</td>
           </tr>
       </table>
             
       <table align="left">
          <tr>
              <td style="" colspan="4" >  </td>
          </tr>
           <tr>
             <td style="" colspan="4">  </td>
          </tr>
          {% set nbretraitement = 0 %}
             {% for traitement in  element.traitementrequetes  %}
                        {% if traitement.estdelete == 0 %} 
                            {% set nbretraitement =nbretraitement +1 %}
           <tr>
              <td style="" colspan="4" >  </td>
          </tr>
          <tr>
             <td style="width: 100%; text-align: left; font-size: 8pt;color: #113300;" colspan="4">Traitement N° {{ nbretraitement }} du   {{  traitement.dateLancement|date('d-m-Y') }} à {{  traitement.dateLancement|date('H:i') }} </td>
           </tr>
          <tr>
              <td style="" colspan="4" >  </td>
          </tr>
            <tr>
                <td style="width: 100%; text-align: left; font-size: 8pt;" colspan="4"> Adressé au responsable technique : <span style="font-weight: bold;"> {{ traitement.directeurtechnique.nomPrenom }} </span></td>
          </tr>
          <tr>
              <td style="" colspan="4" >  </td>
          </tr>
          <tr>
             <td style="width: 100%; text-align: left; font-size: 8pt;" colspan="4">Message de recommandation à lui addressé par la S R U : <br>  <span style="font-size: 7pt;margin-left: 25%;"> {{ traitement.commentaireLancement }} <br>  </span></td>
          </tr>
          {% set nbreresultat = 0 %}
          {% if  traitement.resultattraitementrequetes   is not null %}
                <tr>
                    <td style="width: 120mm; text-align: left; font-size: 10pt;" colspan="4">  
                        <table align="left"  style="border-top: solid 0.15mm; border-right: solid 0.15mm; border-bottom: solid 0.15mm;    border-left: solid 0.15mm;" >
                            <tr>
                                <td style="width: 100mm; height: 8mm; text-align: left; font-size: 6pt; color: #000033;font-weight: bold;" colspan="4">
                                    RESULTATS DU TRAITEMENT N° {{ nbretraitement }} DU RESPONSABLE TECHNIQUE</td>
                            </tr>
                            <tr>
                                <td style="width: 10mm; text-align: left; font-size: 8pt;color: #113300;" colspan="1">N° </td>
                                <td style="width: 35mm; text-align: left; font-size: 8pt;font-weight: bold;color: #113300;" colspan="1"> Date</td>
                                <td style="width: 35mm; text-align: left; font-size: 8pt;font-weight: bold;color: #113300;" colspan="1"> PJ </td>
                                <td style="width: 55mm; text-align: left; font-size: 8pt;font-weight: bold;color: #113300;" colspan="1">  Commentaires</td>
                            </tr>
                            {% for resultat in  traitement.resultattraitementrequetes  %}
                                {% if resultat.estdelete == 0 %} 
                                    {% set nbreresultat = nbreresultat+1 %}
                                    <tr>
                                        <td style="width: 10mm; text-align: left; font-size: 8pt;" colspan="1">{{ nbreresultat }} </td>
                                        <td style="width: 35mm; text-align: left; font-size: 8pt;" colspan="1">   {{ resultat.dateResultat|date('d-m-Y') }} à {{  resultat.dateResultat|date('H:i') }} </td>
                                        <td style="width: 35mm; text-align: left; font-size: 8pt;" colspan="1"> {% if resultat.fileretraitement is not null %} {{ resultat.fileretraitement.nameFile }}  {% else %} Aucune {% endif %}</td>
                                        <td style="width: 55mm; text-align: left; font-size: 8pt;" colspan="1">   {{ resultat.commentaireResultat }}</td>
                                    </tr>
                                    <tr>
                                        <td style="" colspan="4" >  </td>
                                    </tr>
                                {% endif %}
                              {% endfor %}
                        </table>
                    </td>
                </tr> 
          {% endif %}
          {% if nbreresultat == 0 %} 
           <tr>
             <td style="width: 120mm; text-align: left; font-size: 8pt;color: #C82829;" colspan="4">En attente de résultat ... </td>
           </tr>
          {% endif %}
          {% if  nbretraitement == 0 %}
          <tr>
             <td style="width: 120mm; text-align: left; font-size: 8pt;color: #C82829;" colspan="4"> Traitement en cours d'initiation ... </td>
           </tr>      
          {% endif %}
          
          {% if traitement.reponsetraitementrequete is not null %}
           <tr>
               <td style="width: 100%; text-align: left; font-size: 8pt;" colspan="4">Réponse de l'usager/client reçue le :  <span style="font-weight: bold;">   {{  traitement.reponsetraitementrequete.dateReponse|date('d-m-Y') }} à {{  traitement.reponsetraitementrequete.dateReponse|date('H:i') }} </span>   
               Appréciation laissée : <span style="font-weight: bold;">  {{  traitement.reponsetraitementrequete.mention.libelle }} </span> <br>
               </td>
           </tr>   
           <tr>
              <td style="width: 100%; text-align: left; font-size: 8pt;" colspan="4">Commentaire de l'usager/client dudit traitement :  <br><br><span style=" font-size: 7pt;"> {{ traitement.reponsetraitementrequete.commentaireReponse }} </span></td>
          </tr>   
          {%  else %}
             <tr>
               <td style="width: 120mm; text-align: left; font-size: 8pt;color: #C82829;" colspan="4"> En attente de réponse de l'usager/client ... </td>
             </tr>
          {% endif %}
          <tr>
              <td style="" colspan="4" >  </td>
          </tr>
          <tr>
              <td style="" colspan="4" >  </td>
          </tr>
          <tr>
              <td style="" colspan="4" > - - - - - - - - - - - - - - - - - - - - - - - - - - -  - - - - - - - - - - - - - - - - - - - - - -  - - - - - - - - -  - - - -  - - - - - - - -  -  </td>
          </tr>
       {% endif %}
  {% endfor %}      
