
{% extends "BZUserBundle::layout.html.twig"%}
{% block content_title %} 
  <h6 style="text-align: center;text-shadow: 0px 0.5px 0.5px blue;">   ESPACE D'ENREGISTREMENT DE REQUETES </h6>
{% endblock content_title %}
{% block content_body %}
<div class="ui-draggable pourrequete" {% block parentStyle %} style="position: relative; left: 10px; top: 10px;" {% endblock parentStyle %}  action="{% block parentAction %} {% endblock parentAction %}" method="post"  >
<div class="col-lg-12">
    <div class="panel panel-success">
        <div class="panel-heading" style="font-size: 12px;">
             FORMULAIRES D'ENREGISTREMENT 
        </div>
        <div class="panel-body">
        <div class="row">
                                    <div class="box dark col-lg-6">
                              <header>
                                  <div class="icons"><i class="icon-edit"></i></div>
                                  <h5>Espace des Particuliers</h5>
                                  <div class="toolbar">
                                      <ul class="nav">
                                          <li>
                                              <a class="accordion-toggle minimize-box" data-toggle="collapse" href="#div-1">
                                                  <i class="icon-chevron-down"></i>
                                              </a>
                                          </li>
                                      </ul>
                                  </div>
                              </header>
                              <div id="div-1" class="accordion-body body in" style="height: auto;">
                                  {% if valide is defined %}
                                                {% if valide ==1 %}
                                                <div class="alert alert-success fade in">
                                                    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                                                    <strong>La requête est enregistrée avec succès!</strong> le code de récépissé pour consultation est : {{ code }}
                                                </div>
                                                {% endif %}
                                            {% endif %}
                                            <form     action="{{ path("enregistre_requete") }}"  {{ form_enctype(formpersonnephysique) }} method="post"  >
                                                {{ form_widget(formpersonnephysique) }}
                                                {{ form_rest(formpersonnephysique) }}
                                                <button type="submit" class="btn btn-success btn-xs btn-line" style="float: right;"><i class="icon icon-share"> </i> Enregistrer la  Requête</button>
                                            <br/>
                                            </form>
                                </div>
                        </div>
                                    <div class="box dark col-lg-6">
                              <header>
                                  <div class="icons"><i class="icon-edit"></i></div>
                                  <h5>Espace des Structures - Sociétés - Entreprises</h5>
                                  <div class="toolbar">
                                      <ul class="nav">
                                          <li>
                                              <a class="accordion-toggle minimize-box" data-toggle="collapse" href="#div-2">
                                                  <i class="icon-chevron-down"></i>
                                              </a>
                                          </li>
                                      </ul>
                                  </div>
                              </header>
                              <div id="div-2" class="accordion-body body in" style="height: auto;">
                                   {% if valide is defined %}
                                                {% if valide ==2 %}
                                                <div class="alert alert-success fade in">
                                                    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                                                    <strong>La requête est enregistrée avec succès!</strong> le code de récépissé pour consultation est : {{ code }}
                                                </div>
                                                {% endif %}
                                            {% endif %}
                                            <form     action="{{ path("enregistre_requete") }}"  {{ form_enctype(formpersonnemorale) }} method="post"  >
                                                {{ form_widget(formpersonnemorale) }}
                                                {{ form_rest(formpersonnemorale) }}
                                                <button type="submit" class="btn btn-success btn-xs btn-line" style="float: right;"> <i class="icon icon-share"> </i> Enregistrer la  Requête</button>
                                            <br/>
                                            </form>
                                </div>
                        </div>
                        </div>
        </div>
        <div class="panel-footer ">
         {% block parentBoutons %} 
            <a type="button" class="btn btn-default btn-xs btn-line" href="#" id="retour" onclick="location.reload();"><i class="icon icon-refresh"> </i> Actualiser</a>
           {% endblock parentBoutons %}
        </div>
    </div>
</div>

</div>
 {% endblock content_body %}
{% block javascript %} 
<script>
     //$('.pourrequete').draggable();
</script>
{% endblock javascript %}