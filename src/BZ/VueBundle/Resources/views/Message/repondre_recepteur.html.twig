{% extends "BZVueBundle::parent_complement.html.twig"%}

{% block parentAction %} 
    {{ path('repondre_recepteur',{'id': id})}}
{% endblock parentAction %}

{% block parentTitre %} <i class="icon icon-envelope"> </i> REPONSE AU MESSAGE {% endblock parentTitre %}
{% block parentStyle %} style="position: relative; left: 500px; top: 129px;" {% endblock parentStyle %}
{% block parentContenu %}
    <div style="color: black;font-size: 12px;" class="well">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        Date reçue : <strong>{{  element.message.dateEnvoi|date('d-m-Y') }} à {{  element.message.dateEnvoi|date('H:i') }}</strong><br/>
        Objet : <strong>{{  element.message.objet }}</strong><br/>
        Pièce Jointe : {% if element.message.filerequete is null %} <strong> Aucune</strong>{% else %}<a href="{{ asset( element.message.filerequete.dowloadPath) }}" target="_blank"><strong> {{ element.message.filerequete.nameFile }} </strong></a>{% endif %}<br/>
        Emetteur : <strong>{{  element.message.emetteur.user.nomPrenom }} </strong><br/>
        Texte du message : <br/><span style="margin-left: 10px;"> {{ element.message.messageEnvoi }} </span><br/>
    </div>
   <div>
     {{ form_widget(form) }}
    {{ form_rest(form) }}
    </div>
{% endblock parentContenu %}
{% block parentBoutons %} 
                        <a type="button" class="btn btn-default btn-xs btn-line " href="#" id="retour" onclick="location.reload();"><i class="icon icon-arrow-left"> </i> Retour</a>
                        <button type="submit" class="btn btn-info btn-xs btn-line" >Envoyer</button>
                        <span class='tachat_img hide'><img src="{{ asset('/images/712.GIF') }}" alt="Second slide" class='img-circle' style="height: 20px;width: 20px;"> Envoi ...</span>
{% endblock parentBoutons %}
 {% block parentScript %}
        <script>
            $('form').draggable();
        </script>
    {% endblock parentScript %}