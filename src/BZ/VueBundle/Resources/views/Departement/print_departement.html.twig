{% extends "BZVueBundle::parent_print.html.twig"%}
{% block title %} 
    LISTE DES DEPARTEMENTS 
{% endblock title %}
{% block content_body %}
      
         <table style="width: 100%; border: solid 1px;border-color: black;" cellspacing="0">
               <thead>
            <tr>
                <th style="text-align: right;width: 100%;height: 3%;text-align: center;font-weight: bold;font-size: 8pt;background-color: #85d0e7;color: #000;">
                    DEPARTEMENT</th>
            </tr>
            </thead>
            <tbody>
                  {% set nbre=0 %}
            {% for element in departements %}
                <tr style="border: solid 1px;border-color: black;padding: 0;background-color: {% if nbre%2==0 %} #ffffff; {% else %} #EEEEEE; {% endif%}">
                   {% set nbre=nbre+1 %}
                <td style="border: solid 0.5px;border-color: black;padding: 0;text-align: left;font-size: 9pt;height: 3%;">{{ element.nomdepartement }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock content_body %}