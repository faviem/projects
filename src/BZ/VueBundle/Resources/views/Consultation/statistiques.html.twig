{% extends "BZUserBundle::layout.html.twig"%}
{% block content_title %} 
    <h6 style="text-align: center;text-shadow: 0px 0.5px 0.5px blue;">   STATISTIQUE DES REQUETES DES USAGERS/CLIENTS </h6>
{% endblock content_title %}
{% block content_body %}
    <div class="col-lg-12" style="margin-top: 1%;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span style="font-size: 12px;"> STATISTIQUE DES REQUETES PAR STRUCTURE ET DIRECTION</span> 
                <a href="#" style="float: right;margin-right: 5px;color: black;" target="_blank" class="btn btn-default  btn-xs btn-rect" > <i class="icon   icon-print"></i></a>                
            </div>
                                        <div class="panel-body">
                                            <div class="table-responsive">
                                                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                                    <table style="color: black;" class="table table-striped table-bordered table-hover dataTable no-footer" id="" aria-describedby="dataTables-example_info">
                                                        <thead>
                                                            <tr role="row">
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                                    Catégorie de requête
                                                                </th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                                    Nombre recueilli 
                                                                </th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                                    Nombre résolu
                                                                </th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                                                    Nombre en cours de résolution
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% set nbre = 0 %}
                                                            {% for element in  structuresoustutelles %}
                                                                
                                                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                                                        <td colspan="4" style="font-size: 15px;text-shadow: 0.3px 0.2px 0.2px #0000FF;text-align: left;">{{ element.nom }} </td>
                                                                        {% set nbre = nbre+1 %}
                                                                    </tr>
                                                                    {% set nbrerecueilli = 0 %}
                                                                    {% set nbreresolu = 0 %}
                                                                    
                                                                {% for cat in  categories  %}
                                                                    
                                                                    {% set nbrerecueilliautre = 0 %}
                                                                    {% set nbreresoluautre = 0 %}
                                                                    
                                                                    {% for requete in  element.requetes %}
                                                                        
                                                                       {% if requete.typerequete.id == cat.id and requete.estAvorterUsagerclient==0 %}
                                                                           
                                                                        {% set nbrerecueilliautre = nbrerecueilliautre+1 %}
                                                                        {% set nbrerecueilli = nbrerecueilli+1 %}
                                                                        
                                                                         {% if requete.cloturerequete is not null  %}
                                                                             
                                                                            {% set nbreresoluautre = nbreresoluautre+1 %}
                                                                            {% set nbreresolu = nbreresolu+1 %}
                                                                            
                                                                        {% endif %}
                                                                        
                                                                       {% endif %}
                                                                       
                                                                    {% endfor %}
                                                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                                                        {% set nbre = nbre+1 %}
                                                                    <td class="" style="font-size: 12px;">{{ cat.libelle  }}  </td>
                                                                    <td class="" style="font-size: 12px;text-align: center;">{{ nbrerecueilliautre  }}  </td>
                                                                    <td class="" style="font-size: 12px;text-align: center;">{{  nbreresoluautre }} </td>
                                                                    <td class="" style="font-size: 12px;text-align: center;">{{  nbrerecueilliautre-nbreresoluautre}}  </td>
                                                                    </tr>
                                                                    
                                                                  {% endfor %}  
                                                                  <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}" style="background: #39cccc;">
                                                                        {% set nbre = nbre+1 %}
                                                                    <td class="" style="font-size: 10px;font-weight: bold;"> TOTAUX </td>
                                                                    <td class="" style="font-size: 12px;font-weight: bold;text-align: center;">{{ nbrerecueilli  }}  </td>
                                                                    <td class="" style="font-size: 12px;font-weight: bold;text-align: center;">{{  nbreresolu }} </td>
                                                                    <td class="" style="font-size: 12px;font-weight: bold;text-align: center;">{{  nbrerecueilli-nbreresolu}}  </td>
                                                                  </tr>
                                                                
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
        </div>
    </div>

    <div id='afficheformulaire'>

    </div>
{% endblock content_body %}
