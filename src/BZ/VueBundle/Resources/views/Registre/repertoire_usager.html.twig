{% extends "BZUserBundle::layout.html.twig"%}
{% block content_title %} 
    <h6 style="text-align: center;text-shadow: 0px 0.5px 0.5px blue;">   REPERTOIRE  DES  CONTACT(S)  DES  USAGERS/CLIENTS  DU  MERPMDER </h6>
{% endblock content_title %}
{% block content_body %}
    <div class="col-lg-12" style="margin-top: 1%;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span style="font-size: 12px;"> LISTE  DES  USAGERS/CLIENTS  DU  MERPMDER </span> 
                <a href="#" style="float: right;margin-right: 5px;color: black;" target="_blank" class="btn btn-default  btn-xs btn-rect" > <i class="icon   icon-print"></i></a>                
            </div>
            <div class="panel-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#home" data-toggle="tab">Particuliers</a>
                    </li>
                    <li class=""><a href="#profile" data-toggle="tab">Structures</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade in active" id="home">
                        <h6 style="font-weight: bold;">Répertoire des Particuliers</h6>
                            <hr/>
                          <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table style="color: black;" class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                        #
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Date Prise de contact
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                       Prénom(s)  et Nom  
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Profession
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set nbre = 0 %}
                                {% for element in  particuliers %}
                                     
                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                        {% set nbre = nbre+1 %}
                                        <td class="sorting_1" style="text-align: center;">
                                            <a href="{{ path('contact_particulier',{'id': element.id}) }}" title="Editer la fiche de requête" class="btn btn-default btn-xs btn-rect createformulaire" data-toggle="modal" data-target="#myModalu" style="font-size: 11px;"><i class="icon icon-align-center"> </i> </a>
                                        </td>
                                        <td class="" style="font-size: 12px;">{{  element.usagerclient.datePriseContact|date('d-m-Y') }} à {{  element.usagerclient.datePriseContact|date('H:i') }}  </td>
                                        <td class="" style="font-size: 12px;">
                                                {{  element.prenom }}   {{  element.nom }} 
                                        </td>
                                        <td class="" style="font-size: 12px;">{{  element.profession }} </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>  
                    </div>
                    <div class="tab-pane fade" id="profile">
                        <h6 style="font-weight: bold;">Répertoire des Structures (Entreprises-Sociétés-Organisations)</h6>
                        <hr/>
                               <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table style="color: black;" class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example1" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="descending" style="font-size: 13px;text-align: center;">
                                        #
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Date Prise de contact
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                       Nom et Raison sociale  
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="font-size: 13px;text-align: center;">
                                        Domaine d'activité
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set nbre = 0 %}
                                {% for element in  societeentreprises %}
                                     
                                    <tr class="gradeA {% if nbre%2==0 %} odd {% else %} even{% endif%}">
                                        {% set nbre = nbre+1 %}
                                        <td class="sorting_1" style="text-align: center;">
                                            <a href="{{ path('contact_structure',{'id': element.id}) }}" title="Editer la fiche de requête" class="btn btn-default btn-xs btn-rect createformulaire" data-toggle="modal" data-target="#myModalu" style="font-size: 11px;"><i class="icon icon-align-center"> </i> </a>
                                        </td>
                                        <td class="" style="font-size: 12px;">{{  element.usagerclient.datePriseContact|date('d-m-Y') }} à {{  element.usagerclient.datePriseContact|date('H:i') }}  </td>
                                        <td class="" style="font-size: 12px;">
                                                 {{  element.nom }} ( {{  element.raisonsociale }} )
                                        </td>
                                        <td class="" style="font-size: 12px;">{{  element.domaineactivite }} </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id='afficheformulaire'>

    </div>
{% endblock content_body %}
{% block javascript %} 
    <script>
         $('#dataTables-example1').dataTable();    
        $('.createformulaire').click(function (event) {
            var buton = $(this);
            $('#afficheformulaire').html('');
            $.ajax({
                type: 'GET',
                url: buton.attr('href'),
                cache: false,
                success: function (data) {
                    $('#afficheformulaire').html(data);
                    // $('#frm_createVille').dialog();
                },
                error: function () {
                    alert('requête échouée');
                }});
            //we dont what the browser to submit the form
            event.preventDefault();
        });

    </script>
{% endblock javascript %}
