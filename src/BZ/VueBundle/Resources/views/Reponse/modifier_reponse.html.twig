{% extends "BZVueBundle::parent_update.html.twig"%}
{% block parentAction %} 
    {{ path('modifier_reponse',{'id': id, 'nbre': nbre})}}
{% endblock parentAction %}
{% block parentStyle %} style="position: relative; left: 500px; top: 279px;" {% endblock parentStyle %}
{% block parentTitre %} REPONSE  DE  L'USAGER/CLIENT  AU  TRAITEMENT  NÂ° {{ nbre }} {% endblock parentTitre %}
{% block parentContenu %}
    
    <div style="font-size: 12px;">                
       {{ form_widget(form) }}
                {{ form_rest(form) }}
    </div>
{% endblock parentContenu %}
{% block parentBoutons %} 
    <a type="button" class="btn btn-default btn-xs btn-line " href="#" id="retour" onclick="location.reload();"><i class="icon icon-arrow-left"> </i> Retour</a>
    <button type="submit" class="btn btn-warning btn-xs btn-line" >Modifier </button>
    <span class='tachat_img hide'><img src="{{ asset('/images/712.GIF') }}" alt="Second slide" class='img-circle' style="height: 20px;width: 20px;"> Modification en cours ...</span>
    {% endblock parentBoutons %}
    {% block parentScript %}
    <script>
         $(".chzn-select").chosen();
        $('form').draggable();
             $("form").submit(function (event) {
            var $this = $(this);
            $('.tachat_img').removeClass('hide');
            $.ajax({
                type: $this.attr('method'),
                url: $this.attr('action'),
                cache: false,
                data: $this.serialize(),
                success: function () {
                    $('.tachat_img').addClass('hide');
                    location.reload();
                },
                error: function () {
                    // $('.tachat_img').removeClass('hide');
                }
            });
            //we dont what the browser to submit the form
            event.preventDefault();
        });
    </script>
{% endblock parentScript %}