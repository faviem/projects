
{% block speedwapp_user_registration_widget %}
{% spaceless %}
    <fieldset>
        <legend>{{ "speedwapp.home.registration.title" | trans }}</legend>
        <p>{{ "speedwapp.home.registration.paragraph" | trans| raw }}</p>
        {{ form_errors(form) }}

        {# Affichage du champ username #}
        {% if form.username.vars.errors|length %}
        <div class="form-group has-error">                
        {% else %}
        <div class="form-group">
        {% endif %}
            {{ form_widget(form.username) }}
            {{ form_errors(form.username) }}
        </div>
        {% if form.email.vars.errors|length %}
        <div class="form-group has-error">                
        {% else %}
        <div class="form-group">
        {% endif %}
            {{ form_widget(form.email, {'attr' : {'class' : ''}}) }}
            {{ form_errors(form.email) }}
        </div>
        {% if form.plainPassword.vars.errors|length %}
        <div class="form-group has-error">                
        {% else %}
        <div class="form-group">
        {% endif %}
            {{ form_widget(form.plainPassword, {'attr' : {'class' : ''}}) }}
            {{ form_errors(form.plainPassword) }}
        </div>
        <div class="form-group">
            <span>{{ "speedwapp.home.registration.span"  | trans({'%link_start_cond%' : '<a href="'~path('speedwapp_frontend_condition_utilisation')~'">', '%link_start_data%' : '<a href="'~path('speedwapp_frontend_charte_confidentialite')~'">', '%link_end_data%' : '</a>', '%link_end_cond%' : '</a>'}) | raw }}</span>
        </div>
     {{ form_rest(form) }}
    </fieldset>
{% endspaceless %}
{% endblock %}
